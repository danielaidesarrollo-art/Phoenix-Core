FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code and synthetic data
COPY . .

# Expose port (Cloud Run uses PORT env var, but we'll default to 8000)
# uvicorn will be started with the $PORT env var in the entrypoint
ENV PORT 8080

CMD ["sh", "-c", "uvicorn phoenix_core_app:app --host 0.0.0.0 --port $PORT"]
